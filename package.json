{
    "name": "ping-tracker",
    "private": false,
    "version": "0.2.2",
    "main": "./dist/ping-tracker.cjs",
    "module": "./dist/ping-tracker.mjs",
    "exports": {
        ".": {
            "require": "./dist/ping-tracker.cjs",
            "import": "./dist/ping-tracker.mjs"
        },
        "./dist/": {
            "import": "./dist/",
            "require": "./dist/"
        }
    },
    "author": {
        "name": "Matronator",
        "email": "info@matronator.cz",
        "url": "https://matronator.cz"
    },
    "types": "./dist/index.d.ts",
    "scripts": {
        "dev": "vite --host",
        "build": "rm -rf build/**/* && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "format": "prettier . --write"
    },
    "devDependencies": {
        "@types/jsdom": "^21.1.6",
        "@types/node": "^20.11.5",
        "@vitest/coverage-v8": "^1.2.1",
        "dts-bundle-generator": "^9.2.4",
        "jsdom": "^24.1.0",
        "lint-staged": "^15.2.0",
        "prettier": "^3.2.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "upgradeps": "^2.0.6",
        "vite": "^5.0.12",
        "vitest": "^1.2.1"
    },
    "files": [
        "./build"
    ]
}
